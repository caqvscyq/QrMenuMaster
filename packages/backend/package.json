{
  "name": "qr-menu-backend",
  "version": "1.0.0",
  "description": "Unified QR Menu Restaurant Ordering System",
  "main": "src/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "seed": "ts-node src/db/seed.ts",
    "seed:force": "ts-node -e \"import('./src/db/seed').then(m => m.seedDatabase())\"",
    "db:init": "ts-node -e \"import('./src/db/seed').then(m => m.initializeDatabase())\"",
    "db:reset": "node reset-db.js",
    "test": "jest"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.2.5",
    "@types/pg": "^8.10.2",
    "axios": "^1.10.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.1.4",
    "drizzle-orm": "^0.27.0",
    "drizzle-zod": "^0.5.1",
    "express": "^4.18.2",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.0",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.0",
    "redis": "^4.7.1",
    "socket.io": "^4.6.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3",
    "winston": "^3.9.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/supertest": "^2.0.12",
    "jest": "^29.5.0",
    "supertest": "^6.3.3"
  }
}
